<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wisc.academicadvisor.Welcome">


    <TextView
        android:id="@+id/academicadvisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_name"
        android:textStyle="bold"
        android:textSize="18pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="#e12525"
        android:textColor="#ffffff"
        android:paddingVertical="25dp"/>

    <Button
        android:id="@+id/createanaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_create_btn"
        android:backgroundTint="#e12525"
        android:textColor="#ffffffff"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="359dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_login_btn"
        android:backgroundTint="#e12525"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="283dp"
        android:layout_below="@+id/academicadvisor"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/searchCourses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <Button
    android:id="@+id/searchCourses"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#e12525"
    android:textColor="#ffffffff"
    android:text="Search Courses"
    android:onClick="launchCourseSearchResultsActivity"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/createanaccount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
